// .vscode/launch.json
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug active C file (gcc + gdb)",
      "type": "cppdbg",
      "request": "launch",
      "preLaunchTask": "C/C++: gcc build active file",
      "program": "${fileDirname}/${fileBasenameNoExtension}",
      "args": [
//        "-n",
//        "10",
        "-C",
        "${workspaceFolder}/hexdump.c",
      ],
      "cwd": "${fileDirname}",
      "stopAtEntry": false,
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb"
    }
  ]
}
